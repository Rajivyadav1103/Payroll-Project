@model IEnumerable<Payrolls.Models.UserGroup>;

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">

                    <label>UserGroupName</label><br />
                <input types="text" class=" form-control txtUserGroupName table-striped" /><br />

                <label>UserGroupCode</label><br />
                <input types="text" class=" form-control txtUserGroupName table-striped" />

                    <br />

                   <button class="btn btnsave btn-success btn-hover mt-3">save</button>
                <button class="btn btn-danger btn-hover mt-3" id="btncancel">cancel</button>
                </div>
            </div>
        </div>
    </div>


<div class="row">

    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>UserGroupId</th>
                            <th>Name</th>
                            <th>UserGroupcode</th>
                            <th>IsActive</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.UserGroupId</td>
                                <td>@item.UserGroupName</td>
                                <td>@item.UserGroupCode</td>
                                <td>@item.IsActive</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {

            $(document).on("click", ".btnsave", function () {
                alert("Save button clicked");
            });

        });


        $(document).on("click","#btncancel",function(){

            alert("this is cancel btn");
        });
    </script>
}
